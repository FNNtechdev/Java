import java.util.Scanner;

public class GradeClassification {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Prompt user to enter their grade
        System.out.print("Enter your average grade for the semester (0 - 100): ");
        double grade = input.nextDouble();

        // Determine classification
        if (grade >= 70 && grade <= 100) {
            System.out.println("You got a First Class Honours!");
        } else if (grade >= 60 && grade < 70) {
            System.out.println("You got a Second Class Upper Division.");
        } else if (grade >= 50 && grade < 60) {
            System.out.println("You got a Second Class Lower Division.");
        } else if (grade >= 40 && grade < 50) {
            System.out.println("You got a Pass.");
        } else if (grade >= 0 && grade < 40) {
            System.out.println("You Failed.");
        } else {
            System.out.println("Invalid input! Please enter a grade between 0 and 100.");
        }

        input.close();
    }
}
