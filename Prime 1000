public class PrimeCounter {
    public static void main(String[] args) {
        int count = 0; // to count total prime numbers

        System.out.println("Prime numbers between 0 and 1000 are:");
        
        // loop through all numbers from 2 to 1000
        for (int num = 2; num <= 1000; num++) {
            if (isPrime(num)) {
                System.out.print(num + " ");
                count++;
            }
        }

        // final output
        System.out.println("\n\nTotal prime numbers between 0 and 1000: " + count);
    }

    // function to check if a number is prime
    public static boolean isPrime(int n) {
        if (n < 2) return false;

        // optimization: check divisibility up to âˆšn
        for (int i = 2; i <= Math.sqrt(n); i++) {
            if (n % i == 0) return false;
        }

        return true;
    }
}
