public class WaterReminder {
    public static void main(String[] args) {
        System.out.println("ðŸ’§ Water Reminder Started!");
        System.out.println("You will get a reminder every 1 hour.\n");

        while (true) {
            try {
                // Sleep for 1 hour (1 hour = 3600000 milliseconds)
                Thread.sleep(3600000);

                // Display reminder
                System.out.println("ðŸ”” Reminder: Please drink water!");
            } catch (InterruptedException e) {
                System.out.println("The reminder was interrupted.");
            }
        }
    }
}
